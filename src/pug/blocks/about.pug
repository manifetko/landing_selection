        span(class="product__icon" style="top:25%; right:45%")
            svg(width="28" height="25" viewBox="0 0 28 25") 
                use(xlink:href="./imgs/sprites.svg#horse")
        span(class="product__icon" style="top:30%; right:40%")
            svg(width="28" height="25" viewBox="0 0 28 25") 
                use(xlink:href="./imgs/sprites.svg#horse")
        span(class="product__icon" style="top:15%; right:35%")
            svg(width="25" height="25" viewBox="0 0 25 25") 
                use(xlink:href="./imgs/sprites.svg#parking")
        span(class="product__icon" style="top:20%; right:18%")
            svg(width="25" height="25" viewBox="0 0 25 25") 
                use(xlink:href="./imgs/sprites.svg#parking")
        span(class="product__icon" style="top:40%; right:15%")
            svg(width="28" height="25" viewBox="0 0 28 25") 
                use(xlink:href="./imgs/sprites.svg#horse")
        div(class="product__arrow-left")
            svg(width="22" height="22" viewBox="0 0 22 22" style="z-index: 1;") 
