                    a(href="tel:88000000000" class="footer__phone")
                        svg(width="20" height="20" viewBox="0 0 20 20")
                            use(xlink:href="./imgs/sprites.svg#phone-blue")
                        span(class="footer__phone-text") 8 800-000-00-00
                    a(href="mailto:mailmail@mail.ru" class="footer__mail")
